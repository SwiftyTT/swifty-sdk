{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "outDir": "./dist/esm",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
